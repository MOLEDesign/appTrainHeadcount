<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap       = "http://phonegap.com/ns/1.0"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
        id              = "uk.co.gwtrains.rttraincount"
        version         = "2.1.0">

	<name>RT Train Count</name>

    <preference name="phonegap-version" value="3.7.0" />
	
	<description>
		An application for various train counts
	</description>
	
	<author href="http://railtracks.fgw.co.uk" email="fgw-it@firstgroup.com">
		Morgan Leecy / FGW IT
	</author>
	
	<license href="http://railtracks.fgw.co.uk/license">
	</license>

	
	<!-- Expose access to all URIs, including the file and http protocols -->
    <access origin="*" subdomains="true" />
	
	<icon src="logo.png" />

	<content src="index.html" />
	
</widget>
